@model IMBD.ViewModel.AddCustomerViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddMovies</h2>

@using (Html.BeginForm("Create", "movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.mo.Name)
        @Html.TextBoxFor(m => m.mo.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.mo.Plot)
        @Html.TextBoxFor(m => m.mo.Plot, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.mo.producer)
        @Html.TextBoxFor(m => m.mo.producer, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.mo.ReleaseDate)
        @Html.TextBoxFor(m => m.mo.ReleaseDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Act">Add Actors</label>
        @Html.DropDownListFor(m => m.Act,new SelectList(Model.Act,"Id","Name"),"Select Actors", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}

